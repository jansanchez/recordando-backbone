			.active 
				height 31px
			.main_menu
				margin-left 6em
				float left
				height 30px
				+mobile()
					margin-left 0
			.dropdown_menu
				left -83px
			+mobile()
				height auto
				.option
					font-size 1em
					height 3.214em
					line-height 3.214em
				.main_menu
					float none
					height auto
				.dropdown_menu
