	.box_header
		height 84px
		+mobile()
			display none !important
	.slogan
		font-size 20px
		margin-left 140px
		float left
		margin-top 30px
		+mobile()
			display none
	.social_links
		float right
		margin-top 28px
		height 28px
		span 
			*display inline
			*zoom 1
			color $grey60
			display inline-block
			margin-bottom 16px
			vertical-align middle			
		a
			margin-left 10px
			display inline-block
			*zoom 1
			*display inline 
			&.fb 
				sprite($ico_fb)
			&.twitter
				sprite($ico_twitter)
			&.gplus
				sprite($ico_google)
			&:hover
				opacity .8
