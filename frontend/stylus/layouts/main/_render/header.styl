	nav 
		background $grey80
		background -moz-linear-gradient(top,  $grey70 0%, $grey80 100%)
		background -webkit-gradient(linear, left top, left bottom, color-stop(0%, $grey70), color-stop(100%, $grey80))
		background -webkit-linear-gradient(top,  $grey70 0%, $grey80 100%)
		background -o-linear-gradient(top,  $grey70 0%, $grey80 100%)
		background -ms-linear-gradient(top,  $grey70 0%, $grey80 100%)
		background linear-gradient(to bottom,  $grey70 0%, $grey80 100%)
		height 3.214em
		cf()
		ul 
			position relative
			cf()
		li
			float left
			list-style none
			margin 0
			padding 0
			border-left 1px solid $grey70
			&:first-child
				border-left none
		
			&:hover
				.arrow_up
					display block
					transition width .2s ease-in-out,height .2s ease-in-out
					-webkit-transition width .2s ease-in-out,height .2s ease-in-out
				.dropdown_menu
					display block
			.option
				background none
				color #fff
				display inline-block
				font-size 1em
				height 3.214em
				line-height 3.214em
				padding 0 1em 
				&:hover
					color #fff
					font-family $family2
					transition 0.3s all ease-in
				&.active
					background $grey20
					background -moz-linear-gradient(top,  $grey20 0%, $grey5 100%)
					background -ms-linear-gradient(top,  $grey20 0%, $grey5 100%)
					background -o-linear-gradient(top,  $grey20 0%, $grey5 100%)
					background -webkit-gradient(linear, left top, left bottom, color-stop(0%, $grey20), color-stop(100%, $grey5))
					background -webkit-linear-gradient(top,  $grey20 0%, $grey5 100%)
					background linear-gradient(to bottom,  $grey20 0%, $grey5 100%)
					color $brandSecondary
					transition all 0.3s ease
				+mobile()
					width 100%
			+mobile()
				width 100%
				border-bottom 1px solid #000
				&:hover
					.arrow_up
						display none
					.dropdown_menu
						display none
				.dropdown_menu
					display none
					width 100%
					height 23em
					top -568px
					overflow auto
					ul
						width 100%
					a.image_column
						display none
					li:nth-child(10), li:nth-child(n+11):nth-child(-n + 18)
						margin 0
						top 0
		.arrow_up
			border-color transparent transparent #ffffff transparent
			border-style solid
			border-width 0 9px 9px 9px
			display none
			height 0
			width 0
			z-index 100
			margin -9px auto 0px auto
			transition width .2s ease-in-out,height .2s ease-in-out
			-webkit-transition width .2s ease-in-out,height .2s ease-in-out
		.close_sub_item
			display none
		+mobile()
			display block
			width 100%
			height auto
			position absolute
			top -268px
			z-index 3
			box-shadow 0px 3px 5px 0px #3D3D3D
.account
	font-family $family2
	float right
	list-style none
	margin 0
	li
		position relative
		float left
		> a
			color $grey80
			display inline-block
			font-size 0.857em
			height 32px
			line-height 32px
			padding 0 1em
