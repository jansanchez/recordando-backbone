.top_bar
	height 32px
	background $colorCream url($imgPath+"bg_header.png?version") repeat-x center bottom
	.box_center
		position relative
	+mobile()
		background $grey80 url($imgPath+"bg_footer.jpg?version") repeat-x 0px -10px
		height 55px
		position relative
		z-index 10
.logo
	background url($imgPath + 'logo_ofertop.png?version') no-repeat
	width 120px 
	height 100px 
	display block
	float left
	position absolute
	top 10px 
	z-index 2
	transition all 0.3s ease-in
	&:hover
		transition all 0.3s ease-in
		transform scale(1.04)
		-ms-transform scale(1.04)
		-webkit-transform scale(1.04)
	+mobile()
		float none !important
		position relative !important
		margin auto
		transition none
		background url($imgPath + 'logo_ofertop_small.png?version') no-repeat
		width 71px 
		height 59px 
#btnSubscribe
	background #B39684
	font-size 0.857em
	height 22px
	line-height 22px
	margin-left 140px
	margin-top 0.4em
	padding 0 1em
	transition all 0.3s ease-in 
	span 
		*display inline
		*zoom 1
		display inline-block
		margin-left 10px
		sprite($ico_subscribe)
		vertical-align middle 
	&:hover 
		background #A78B7A
		transition all 0.3s ease-in 
.nav_geo
