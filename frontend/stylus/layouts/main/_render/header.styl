	float left
	font-family $family2
	margin 23px 0 0 5px
	padding 8px 7px 5px
	position relative
	width 160px
	&.active
		border 1px solid $grey40
		background #fff
		width 190px 
		border-radius 6px 6px 0 0
		.geo_department
			border-bottom 1px solid $colorCream
			padding-bottom 4px
			display block
		.geo_arrow
			display none
		.geo_list
			display block
			padding-top 0
	.geo_department
		font-size 20px
		line-height 21px
	.geo_arrow
		sprite($ico_down_arrow)
		position absolute
		margin-left 12px
	/*&:hover
		.geo_list
			display block*/

	.geo_list
		background #fff
		border-color $grey40
		border-radius 0 0 6px 6px
		border-style solid
		border-width 0 1px 1px 1px
		display none
		left -1px
		padding 6px 4px 4px
		position absolute
		top 100%
		width 190px
		z-index 10
		ul
			overflow-y scroll
			position relative
			height 138px
		a
			color $grey60
			display block
			font-size 12px
			padding 2px
			font-family $family1
			&:hover
				background $colorLightCream
				text-decoration none
header 
	background $colorBg
	position relative
	z-index 10
