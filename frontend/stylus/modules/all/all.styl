/**
 * All Styles Cross Website
 * @module all
 * @author Jan Sanchez
 */

@require '../../_config/*'
@require '../../_mixins/*'

html
	font-size $basefont
	+tablet()
		font-size 12px
body
	font-family $family1
	background $colorBg
	margin 0
	padding 0
	-webkit-text-size-adjust 100%
hr
	margin 1.5em 0
	text-align center
	border none
	border-bottom 1px solid $grey20
	&.medium
		border-bottom 2px solid $grey20
	&.dashed
		border 1px dashed $grey70
	&.special
		border none
		border-top 2px solid $grey10
		height 1px
		&:after
			background #fff
			color $grey10
			content "o"
			font-size 16px
			padding 0 0.25em
			position relative
			top -13px
		+mobile()
			display block
ul
	&.bullets
		list-style-type disc
		margin-left 15px !important

.box_center
	cf()
	center($wrapperWidth)
	+tablet()
		overflow hidden
	+mobile()
		overflow hidden
		h2
			margin-left 10px
	h4
		font-size 1.71em
		margin 0 0 1em 0

h2
	font-size 1.714em
	a 
		font-size 0.6em
		color $linkActive
		margin-left 1em
		&:hover
			color $grey80
			transition all 0.3s ease
h3 
	font-size 1em
	margin 0

.row 
	cf()


a
	text-decoration none
	color $linkActive
	outline 0
	&:focus
		outline 5px auto -webkit-focus-ring-color
		outline thin dotted #333
		outline-offset -2px
	&:hover, &:active
		outline 0
		color $grey80

ul.authors
	li
		col(1/6, cycle:6)
		margin-bottom 1.5%
		margin-right 1.5%
		position relative
		a
			img
				height 100%
				width 100%
		.tooltip
			display none
		.data
			input
				background transparent
				border 0
				font-size 0.9em
				width 99%
				&.editable
					background #444444
					color white
		.options
			position absolute
			right 0px
			top 0px
			img
				height 20px
				width 20px

form.form_author
	background none repeat scroll 0 0 sandybrown
	margin 3% auto
	padding 2%
	width 30%

.row
	margin 0 0 1px
	label
		float left
		width 70px

